<% if @journal_entry.errors.full_messages.any? %>
  <% @journal_entry.errors.full_messages.each do |error_message| %>
    <%= error_message %><br>
  <% end %>
<% end %>

<%= form_for(@journal_entry) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br>

  <% @categories.each do |category| %>
    <%= check_box_tag("journal_entry[category_ids][]", category.id, @journal_entry.categories.include?(category))%>
    <%= category.name %>
  <% end %>

  <%= f.submit 'Submit' %>
<% end %>
