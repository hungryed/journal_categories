<%= form_for(@journal_entry) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br>

  <% if !@categories.nil? %>
    <% @categories.each do |category| %>
      <%= check_box_tag("journal_entry[category_ids][]", category.id, @journal_entry.categories.include?(category))%>
      <%= category.name %>
    <% end %>
  <% end %>

  <%= f.submit 'Submit' %>
<% end %>
